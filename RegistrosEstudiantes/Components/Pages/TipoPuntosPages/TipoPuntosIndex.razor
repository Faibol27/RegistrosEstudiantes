@page "/TipoPuntos/Index"
@using RegistrosEstudiantes.Models
@using RegistrosEstudiantes.Services
@using System.Linq.Expressions
@inject TipoPuntosServices tipoPuntosServices
@inject NavigationManager navigation

<PageTitle>Índice de Tipos de Puntos</PageTitle>

<div class="container">
    <div class="card shadow-lg">
        <div class="card-header text-center">
            <h5 class="card-title">Listado de Tipos de Puntos</h5>
        </div>

        <div class="card-body">
            <div class="row mb-3 align-items-end">
                <div class="col-md-3">
                    <label>Filtrar por:</label>
                    <select class="form-select" @bind="Filtro">
                        <option value="id">ID</option>
                        <option value="descripcion">Descripción</option>
                    </select>
                </div>
                <div class="col-md-6">
                    <label>Búsqueda:</label>
                    <div class="input-group">
                        <input class="form-control" @bind="ValorFiltro" placeholder="Buscar..." />
                        <button class="btn btn-outline-primary" @onclick="Buscar">
                            <i class="bi bi-search"></i> Buscar
                        </button>
                    </div>
                </div>
                <div class="col-md-3 text-end">
                    <a href="/TipoPuntos/Create" class="btn btn-success">
                        <i class="bi bi-plus-square"></i> Crear Nuevo
                    </a>
                </div>
            </div>

            @* Tabla de Datos *@
            <table class="table table-bordered table-hover">
                <thead class="table-light">
                    <tr>
                        <th>ID</th>
                        <th>Nombre</th>
                        <th>Descripción</th>
                        <th>Valor</th>
                        <th>Color</th>
                        <th>Estado</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in ListaTipoPuntos)
                    {
                        <tr>
                            <td>@item.TipoId</td>
                            <td>@item.Nombre</td>
                            <td>@item.Descripcion</td>
                            <td>@item.ValorPuntos</td>

                            @* Celda para mostrar el color visualmente *@
                            <td class="text-center">
                                <span class="badge rounded-pill" style="background-color: @item.Color; color: white; text-shadow: 1px 1px 2px black;">
                                    @item.Color
                                </span>
                            </td>

                            @* Celda para mostrar el estado con Badge *@
                            <td class="text-center">
                                @if (item.Estado)
                                {
                                    <span class="badge bg-success">Activo</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Inactivo</span>
                                }
                            </td>

                            <td class="text-center">
                                @* Botón Editar *@
                                <a href="/TipoPuntos/Edit/@item.TipoId" class="btn btn-warning btn-sm">
                                    <i class="bi bi-pencil-square"></i>
                                </a>

                                @* Botón Eliminar *@
                                <a href="/TipoPuntos/Delete/@item.TipoId" class="btn btn-danger btn-sm">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="card-footer text-muted">
            <strong>Total de Registros:</strong> @ListaTipoPuntos.Count
        </div>
    </div>
</div>

@code {
    public List<TipoPuntos> ListaTipoPuntos { get; set; } = new List<TipoPuntos>();
    public string Filtro { get; set; } = "id";
    public string ValorFiltro { get; set; } = "";

    protected override async Task OnInitializedAsync()
    {
        ListaTipoPuntos = await tipoPuntosServices.Listar(t => true);
    }

    public async Task Buscar()
    {
        if (string.IsNullOrWhiteSpace(ValorFiltro))
        {
            ListaTipoPuntos = await tipoPuntosServices.Listar(t => true);
        }
        else
        {
            if (Filtro == "id" && int.TryParse(ValorFiltro, out int id))
            {
                ListaTipoPuntos = await tipoPuntosServices.Listar(t => t.TipoId == id);
            }
            else if (Filtro == "descripcion")
            {
                ListaTipoPuntos = await tipoPuntosServices.Listar(t => t.Descripcion.ToLower().Contains(ValorFiltro.ToLower()));
            }
        }
    }
}