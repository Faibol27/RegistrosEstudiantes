@page "/Estudiantes/Index"
@using Models
@using DAL
@using Microsoft.EntityFrameworkCore
@inject Contexto context

<PageTitle>Índice de Estudiantes</PageTitle>

<div class="container">
    <div class="card shadow-lg">
        <div class="card-header text-center">
            <h1 class="card-title">Listado de Estudiantes</h1>
        </div>

        <div class="card-body">
            @* Botón Crear *@
            <div class="mb-3 text-end">
                <a href="/Estudiante/Create" class="btn btn-success">
                    <i class="bi bi-plus-square"></i> Crear Nuevo
                </a>
            </div>

            @* Buscador *@
            <div class="row mb-3">
                <div class="col-md-3">
                    <label>Filtrar por:</label>
                    <select class="form-control" @bind="Filtro">
                        <option value="id">ID</option>
                        <option value="nombre">Nombre</option>
                        <option value="email">Email</option>
                    </select>
                </div>
                <div class="col-md-5">
                    <label>Búsqueda:</label>
                    <div class="input-group">
                        <input type="text" class="form-control" @bind="ValorFiltro" placeholder="Buscar..." />
                        <button class="btn btn-primary" @onclick="Buscar">
                            <i class="bi bi-search"></i> Buscar
                        </button>
                    </div>
                </div>
            </div>

            @* Tabla de Datos *@
            <table class="table table-bordered table-hover">
                <thead class="table-light">
                    <tr>
                        <th>ID</th>
                        <th>Nombres</th>
                        <th>Email</th>
                        <th>Edad</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var est in ListaEstudiantes)
                    {
                        <tr>
                            <td>@est.EstudiantesId</td>
                            <td>@est.NombreEstudiante</td>
                            <td>@est.EmailEstudiantes</td>
                            <td>@est.EdadEstudiantes</td>

                            <td class="text-center">
                                <a href="/Estudiantes/Edit/@est.EstudiantesId" class="btn btn-warning btn-sm">
                                    <i class="bi bi-pencil-square"></i> Editar
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="card-footer text-muted">
            <strong>Total:</strong> @ListaEstudiantes.Count
        </div>
    </div>
</div>

@code {
    public List<Estudiantes> ListaEstudiantes { get; set; } = new List<Estudiantes>();
    public string Filtro { get; set; } = "id";
    public string ValorFiltro { get; set; } = "";

    protected override async Task OnInitializedAsync()
    {
        ListaEstudiantes = await context.Estudiantes.ToListAsync();
    }

    public async Task Buscar()
    {
        if (string.IsNullOrWhiteSpace(ValorFiltro))
        {
            ListaEstudiantes = await context.Estudiantes.ToListAsync();
        }
        else
        {
            if (Filtro == "id" && int.TryParse(ValorFiltro, out int id))
            {
                ListaEstudiantes = await context.Estudiantes
                    .Where(p => p.EstudiantesId == id)
                    .ToListAsync();
            }
            else if (Filtro == "nombre")
            {
                ListaEstudiantes = await context.Estudiantes
                    .Where(p => p.NombreEstudiante.ToLower().Contains(ValorFiltro.ToLower()))
                    .ToListAsync();
            }
            else if (Filtro == "email")
            {
                ListaEstudiantes = await context.Estudiantes
                    .Where(p => !string.IsNullOrEmpty(p.EmailEstudiantes) && p.EmailEstudiantes.ToLower().Contains(ValorFiltro.ToLower()))
                    .ToListAsync();
            }
        }
    }
}