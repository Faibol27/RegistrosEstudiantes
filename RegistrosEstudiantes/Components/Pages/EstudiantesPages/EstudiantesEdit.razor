@page "/Estudiantes/Edit/{EstudiantesId:int}"
@using RegistrosEstudiantes.Models
@using RegistrosEstudiantes.DAL
@inject EstudianteServices estudianteService
@inject NavigationManager navigation
@inject IToastService toast
@inject Contexto context

<PageTitle>Editar Estudiante</PageTitle>

<EditForm Model="estudiante" OnValidSubmit="Modificar">
    <DataAnnotationsValidator />

    <div class="container">
        <div class="card shadow-lg">
            <div class="card-header text-center">
                <h5 class="card-title">Editar Estudiante</h5>
            </div>

            <div class="card-body">
                @* ID (Solo lectura) *@
                <div class="mb-3">
                    <label class="form-label"><strong>ID</strong></label>
                    <InputNumber class="form-control" @bind-Value="estudiante.EstudiantesId" readonly />
                </div>

                @* NombreEstudiante *@
                <div class="mb-3">
                    <label class="form-label"><strong>Nombre</strong></label>
                    <InputText class="form-control" @bind-Value="estudiante.NombreEstudiante" placeholder="Ej: Juan Pérez" />
                    <ValidationMessage For="(() => estudiante.NombreEstudiante)" />
                </div>

                @* EmailEstudiantes *@
                <div class="mb-3">
                    <label class="form-label"><strong>Email</strong></label>
                    <InputText class="form-control" @bind-Value="estudiante.EmailEstudiantes" placeholder="Ej: correo@ejemplo.com" />
                    <ValidationMessage For="(() => estudiante.EmailEstudiantes)" />
                </div>

                @* EdadEstudiantes *@
                <div class="mb-3">
                    <label class="form-label"><strong>Edad</strong></label>
                    <InputNumber class="form-control" @bind-Value="estudiante.EdadEstudiantes" />
                    <ValidationMessage For="(() => estudiante.EdadEstudiantes)" />
                </div>
            </div>

            <div class="card-footer text-center">
                <a href="/Estudiantes/Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Volver
                </a>

                @* Botón Modificar *@
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-pencil-square"></i> Modificar
                </button>

                @* Botón Eliminar *@
                <button type="button" class="btn btn-danger" @onclick="Eliminar">
                    <i class="bi bi-trash"></i> Eliminar
                </button>
            </div>
        </div>
    </div>
</EditForm>

@code {
    [Parameter]
    public int EstudiantesId { get; set; }

    public Estudiantes estudiante { get; set; } = new Estudiantes();

    protected override async Task OnInitializedAsync()
    {
        var encontrado = await context.Estudiantes.FindAsync(EstudiantesId);

        if (encontrado != null)
        {
            estudiante = encontrado;
        }
        else
        {
            toast.ShowError("Estudiante no encontrado");
            navigation.NavigateTo("/Estudiantes/Index");
        }
    }

    public async Task Modificar()
    {
        if (await estudianteService.Existe(estudiante.NombreEstudiante, estudiante.EstudiantesId))
        {
            toast.ShowWarning("Ya existe otro estudiante con ese nombre.");
            return;
        }

        context.Estudiantes.Update(estudiante);
        var guardo = await context.SaveChangesAsync() > 0;

        if (guardo)
        {
            toast.ShowSuccess("¡Estudiante actualizado correctamente!");
            navigation.NavigateTo("/Estudiantes/Index");
        }
        else
        {
            toast.ShowError("Error al intentar modificar.");
        }
    }

    public async Task Eliminar()
    {
        context.Estudiantes.Remove(estudiante);
        var eliminado = await context.SaveChangesAsync() > 0;

        if (eliminado)
        {
            toast.ShowSuccess("Estudiante eliminado.");
            navigation.NavigateTo("/Estudiantes/Index");
        }
        else
        {
            toast.ShowError("No se pudo eliminar el estudiante.");
        }
    }
}